{
	"compilerOptions": {
		"outDir": "./build",
		"allowJs": true,
		"target": "es6",
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmitOnError": true
	},
	"include": ["./src/**/*"]
}
